    <h1 align="center" style="color:#221349;"  font-family: 'Lato', sans-serif;><big><big>Register</big></big></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class="test" align="center" >
  <tr>
  <div class="field">
  <td><%= f.label :name %></td>
  <td><%= f.text_field :name, autofocus: true %></td>
  </div>
 
  </tr>

  
  <tr>
  <td><%= f.label :Gender %></td>
    
  <td>Male<%= f.radio_button :is_female,"false"%></td> 
  <td>Female<%= f.radio_button :is_female,"true" %> </td>
  </tr>
<tr>

<td><div><%= f.label :date_of_birth %></td>
<td><%= f.date_select :dob %></div></td>
</tr>
 
  <tr>
  <div class="field">
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </div>
  </tr>
  <tr>
  <div class="field">
    <td><%= f.label :password %></td>
    
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    <% if @minimum_password_length %>
    <td><em>(<%= @minimum_password_length %> characters minimum)</em></td>
    <% end %><br />
  </div>
  </tr>
  <tr>
  <div class="field">
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </div>
</tr>
<tr>
  <div class="actions">
   <td> <button class="btn btn-sucess"><%= f.submit "Sign up" %></button></td>
  </div>
  </tr>
<% end %>
</table>

